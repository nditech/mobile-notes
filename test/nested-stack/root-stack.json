{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Use TemplateURL. Templates are stored in S3. The root stack that contains all stacks needed for the app.",
    
    "Resources": {
        "S3WebsiteReactStack": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "Parameters": {
                    "BucketName": {
                        "Fn::Sub": "${AWS::StackName}-s3-bucket"
                    }
                },
                "TemplateURL": "https://s3.amazonaws.com/ndi-tech-cloudformation-templates/s3-static-website-react.json"
            }
        }
    },

    "Outputs": {

    }
}